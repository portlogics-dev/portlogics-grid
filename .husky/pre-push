BRANCH=`git rev-parse --abbrev-ref HEAD`
PROTECTED_BRANCHES="^(main)"

if [[ "$BRANCH" =~ $PROTECTED_BRANCHES ]] 
then
    echo "ğŸš« push to main is prevented"
    exit 1
fi

echo "ğŸ› ï¸ Running pnpm build..."
pnpm build

